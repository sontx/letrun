    "cross-env": "^7.0.3",
    "esbuild": "^0.19.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@letrun/core": "*",
    "commander": "^12.1.0",
