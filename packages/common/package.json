{
  "name": "@letrun/common",
  "version": "0.0.1",
  "description": "Common types and utilities for Letrun which are independent from the runtime environment.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "keywords": [
    "workflow",
    "task",
    "execution"
  ],
  "scripts": {
    "build": "node ../../esbuild.js && tsc --emitDeclarationOnly && tsc-alias",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sontx/letrun.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sontx/letrun/issues"
  },
  "homepage": "https://github.com/sontx/letrun#readme",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.11.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "joi": "^17.13.3",
    "rxjs": "^7.8.1"
  }
}
