{
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "declaration": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
