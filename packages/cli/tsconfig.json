{
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ]
}
