{
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "tests/**/*.ts"]
}
