{
  "name": "@letrun/cli",
  "version": "0.0.1",
  "description": "A simple and efficient tool for running declarative workflows with ease.",
  "type": "module",
  "author": "sontx",
  "bin": {
    "letrun": "dist/letrun.js"
  },
  "keywords": [
    "workflow",
    "task",
    "execution"
  ],
  "scripts": {
    "build": "npm run clean && node esbuild.js",
    "build:prod": "npm run clean && node esbuild.js --prod",
    "start": "node dist/letrun.js",
    "clean": "rm -f ./dist/**",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npm run jest",
    "jest": "jest"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "@types/treeify": "^1.0.3",
    "@types/winston": "^2.4.4",
    "esbuild": "^0.19.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@letrun/core": "*",
    "@letrun/plugin": "*",
    "chalk": "^5.3.0",
    "colors": "^1.4.0",
    "commander": "^12.1.0",
    "joi": "^17.13.3",
    "jsonpath-plus": "^9.0.0",
    "nanoid": "^5.0.7",
    "node-emoji": "^2.1.3",
    "ora": "^8.0.1",
    "treeify": "^1.1.0",
    "winston": "^3.13.1",
    "yaml": "^2.5.0"
  }
}
